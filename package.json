{
  "name": "@imranbarbhuiya/duration",
  "version": "4.4.1",
  "description": "A small and fast utility to convert milliseconds to human-readable string or vice versa.",
  "main": "index.js",
  "exports": {
    ".": [
      {
        "require": "./index.js",
        "import": "./dist/index.js"
      },
      "./index.js"
    ],
    "./*": "./",
    "./esm": "./dist/index.js"
  },
  "types": "dist/index.d.ts",
  "license": "MIT",
  "author": "imranbarbhuiya",
  "engines": {
    "node": ">=8"
  },
  "scripts": {
    "docs": "npx typedoc src/index.ts --name duration",
    "build": "tsc -p tsconfig.json",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "pretest": "npm run build",
    "test": "jest",
    "prepublish": "npm run build"
  },
  "keywords": [
    "ms",
    "time",
    "format",
    "milliseconds",
    "convert",
    "duration"
  ],
  "publishConfig": {
    "access": "public"
  },
  "jest": {
    "coverageDirectory": "./coverage/",
    "collectCoverage": true
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.15.0",
    "@typescript-eslint/parser": "^5.15.0",
    "eslint": "^8.11.0",
    "jest": "^27.5.1",
    "typescript": "^4.6.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/imranbarbhuiya/duration.git"
  },
  "bugs": {
    "url": "https://github.com/imranbarbhuiya/duration/issues"
  },
  "homepage": "https://duration.js.org/",
  "packageManager": "yarn@3.2.0"
}
